# Proteger archivos críticos pero permitir acceso a recursos necesarios
<FilesMatch "^(\.htaccess|\.htpasswd|\.git|\.env|config\.php)">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# IMPORTANTE: NO bloquear conexion.php ya que es necesario para la aplicación
# <FilesMatch "^(conexion\.php)">
#    Order Allow,Deny
#    Deny from all
# </FilesMatch>

# Proteger las carpetas sensibles
<DirectoryMatch "^/.git/">
    Order Deny,Allow
    Deny from all
</DirectoryMatch>

# Permitir parámetros GET en restablecer-password
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} ^token=([a-zA-Z0-9]+)$
    RewriteRule ^restablecer-password$ frontend/restablecer-password.php [L]
</IfModule>

# Medidas básicas de seguridad
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always append X-Frame-Options SAMEORIGIN
    # Habilitar la protección XSS en navegadores modernos
    Header always set X-XSS-Protection "1; mode=block"
    # Prevenir el sniffing de tipo MIME
    Header always set X-Content-Type-Options "nosniff"
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Configuración CORS para fuentes si es necesario
<IfModule mod_headers.c>
    <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|font\.css)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

